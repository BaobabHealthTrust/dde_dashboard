          }
          
        } else if(target){
          
          if(level == 0){    
          
            __$("main2").style.zIndex = 1;
                  
            __$("main1").style.zIndex = 100;
                    
            target.setAttribute("src", current_path);
            
            __$("main-display").setAttribute("src", next_path);
            
          } else if(level == 1){    
          
